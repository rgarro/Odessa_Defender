import com.avVenta.hotspot.*;import mx.utils.Delegate;import com.avVenta.events.BroadcastableMovieClip;dynamic class com.avVenta.hotspot.HotspotContentBase extends BroadcastableMovieClip{		private var btnClose:Button;	private var _parent:HotspotAnimationBase;		public var width:Number;	public var height:Number;			public function HotspotContentBase(){		btnClose.onRelease = Delegate.create(this, close);	}		public function close(){		this._parent.broadcastEvent("onContentClosed", {});	} 		public function getLabel():String{		return this._parent.getLabel();	}		public function getData():Object{		return this._parent.getData();	}		}